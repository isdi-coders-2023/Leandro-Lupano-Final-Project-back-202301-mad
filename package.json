{
  "name": "backend-guitar-world",
  "version": "1.0.0",
  "description": "Final Project - Bootcamp ISDI Coders 2023",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env DEBUG=GW* node ./dist/index.js",
    "start:mon": "cross-env DEBUG=GW* PORT=5000 nodemon ./dist/index.js",
    "build": "tsc -w",
    "build:prod": "tsc",
    "prebuild": "npm run copy:public",
    "prebuild:prod": "npm run copy:public",
    "copy:public": "copyfiles -u 1 src/public/**/*.* dist",
    "test": "cross-env NODE_ENV=test jest --watchAll --coverage .test.",
    "test:prod": "cross-env NODE_ENV=test jest --watchAll --coverage --watchAll=false --passWithNoTests",
    "super:test": "cross-env NODE_ENV=test jest --watchAll --coverage --runInBand .spec.",
    "prepare": "husky install"
  },
  "keywords": [
    "ecommerce",
    "guitar",
    "shop",
    "backend"
  ],
  "author": "Leandro Lupano",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "bcryptjs": "^2.4.3",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.56.0",
    "express": "^4.18.2",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97"
  }
}
